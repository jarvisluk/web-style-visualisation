{
  "id": "glassmorphism",
  "name": "Glassmorphism",
  "nameZh": "毛玻璃",
  "category": "modern",
  "description": "Frosted glass effect with blur and transparency",
  "descriptionZh": "背景模糊 + 半透明，营造磨砂玻璃质感",
  "author": "core",
  "references": ["https://css.glass/"],
  "variables": {
    "--color-primary": "#6366f1",
    "--color-primary-hover": "#4f46e5",
    "--color-bg": "#0f0f23",
    "--color-surface": "rgba(255, 255, 255, 0.08)",
    "--color-text": "#e2e8f0",
    "--color-text-secondary": "#94a3b8",
    "--color-accent": "#a78bfa",
    "--color-border": "rgba(255, 255, 255, 0.15)",
    "--border-radius": "16px",
    "--border-width": "1px",
    "--border-color": "rgba(255, 255, 255, 0.15)",
    "--shadow-x": "0px",
    "--shadow-y": "8px",
    "--shadow-blur": "32px",
    "--shadow-spread": "0px",
    "--shadow-color": "rgba(31, 38, 135, 0.2)",
    "--font-family": "'Inter', sans-serif",
    "--font-weight": "400",
    "--font-weight-bold": "600",
    "--backdrop-blur": "12px",
    "--bg-opacity": "0.1"
  },
  "specialTuning": [
    {
      "variable": "--backdrop-blur",
      "label": "Blur Intensity",
      "labelZh": "模糊强度",
      "type": "range",
      "min": 0,
      "max": 30,
      "step": 1,
      "unit": "px"
    },
    {
      "variable": "--bg-opacity",
      "label": "Background Opacity",
      "labelZh": "背景透明度",
      "type": "range",
      "min": 0,
      "max": 1,
      "step": 0.05,
      "unit": ""
    }
  ],
  "keyProperties": [
    { "property": "backdrop-filter: blur()", "explanation": "核心：模糊元素背后的内容" },
    { "property": "background: rgba()", "explanation": "半透明背景让模糊效果透出" }
  ]
}
